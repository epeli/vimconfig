#!/bin/sh

if [ "$(which prettier)" = "" ]; then
    exec cat
fi

opts=

while true; do

    if [ -f .prettieropts ]; then
        opts=$(cat .prettieropts)
        break
    fi

    if [ "$(pwd)" = "/" ]; then
        break
    fi

    cd ..

done

# Do not do anything if config is not found
if [ "$opts" = "" ]; then
    exec cat
fi

if [ "$opts" = "disable" ]; then
    exec cat
fi

exec prettier $opts $@

